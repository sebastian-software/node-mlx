{
  "name": "@node-mlx/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for node-mlx - LLM inference powered by Apple MLX",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter node-mlx dev",
    "build": "turbo run build",
    "build:swift": "cd packages/swift && ./generate-version.sh && swift build -c release && ./copy-artifacts.sh",
    "build:native": "turbo run build:native --filter=node-mlx",
    "clean": "turbo run clean && rm -rf packages/swift/.build coverage .turbo",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:swift": "cd packages/swift && swiftformat Sources Tests --lint",
    "format:swift": "cd packages/swift && swiftformat Sources Tests",
    "hf2swift": "tsx packages/hf2swift/src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "benchmark": "turbo run benchmark --filter=@node-mlx/benchmarks"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/types": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-gyp": "^12.1.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
