{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:native": {
      "cache": false,
      "outputs": ["native/build/**"]
    },
    "prebuildify": {
      "dependsOn": ["build:native"],
      "cache": false,
      "outputs": ["prebuilds/**"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "benchmark": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    }
  }
}
